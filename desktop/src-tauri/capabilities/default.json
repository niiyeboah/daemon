{
  "identifier": "daemon-desktop-default",
  "description": "Default capabilities for the Daemon desktop app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-stdin-write",
    "store:default",
    "updater:default",
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "path": "https://ollama.com/**" },
        { "path": "https://openclaw.ai/**" },
        { "path": "http://127.0.0.1:18789/**" },
        { "path": "http://localhost:18789/**" }
      ]
    }
  ]
}
