      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/daemon-setup"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "dmg": {}
    },
    "linux": {
      "appimage": {},
